rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isManager() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager'];
    }

    function isViewer() {
      return get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager', 'viewer'];
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profile images
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if isViewer();
      allow write: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(userId) || isAdmin());
    }

    // Guest photos
    match /guest_photos/{guestId}/{allPaths=**} {
      allow read: if isViewer();
      allow write: if isAuthenticated() && (isManager() || isAdmin());
      allow delete: if isAuthenticated() && (isManager() || isAdmin());
    }

    // ID proofs
    match /id_proofs/{guestId}/{allPaths=**} {
      allow read: if isViewer();
      allow write: if isAuthenticated() && (isManager() || isAdmin());
      allow delete: if isAuthenticated() && (isManager() || isAdmin());
    }

    // Contract documents
    match /contracts/{contractId}/{allPaths=**} {
      allow read: if isViewer();
      allow write: if isAuthenticated() && (isManager() || isAdmin());
      allow delete: if isAuthenticated() && (isManager() || isAdmin());
    }

    // Receipts
    match /receipts/{transactionId}/{allPaths=**} {
      allow read: if isViewer();
      allow write: if isAuthenticated() && (isManager() || isAdmin());
      allow delete: if isAuthenticated() && (isManager() || isAdmin());
    }

    // Reports
    match /reports/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && (isOwner(userId) || isViewer());
      allow write: if isAuthenticated() && (isOwner(userId) || isManager() || isAdmin());
      allow delete: if isAuthenticated() && (isOwner(userId) || isManager() || isAdmin());
    }

    // General uploads with size and type validation
    match /uploads/{allPaths=**} {
      allow read: if false; // No public reads
      allow write: if isAuthenticated() &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                     request.resource.contentType.matches('image/.*|application/pdf');
    }

    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}